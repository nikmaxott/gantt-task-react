{
  "name": "@nikmaxott/gantt-task-react",
  "version": "2.0.0",
  "description": "Interactive Gantt Chart for React with TypeScript. Fork of MaTeMaTuK's gantt-task-react.",
  "author": "nikmaxott <nikolaus@nikmaxott.org>, MaTeMaTuK <maksym.vikarii@gmail.com>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikmaxott/gantt-task-react.git"
  },
  "main": "dist/gantt-task-react.js",
  "module": "dist/gantt-task-react.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/gantt-task-react.js",
      "require": "./dist/gantt-task-react.umd.cjs"
    },
    "./style.css": "./dist/gantt-task-react.css"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "react",
    "gantt",
    "typescript",
    "chart",
    "svg",
    "gantt-chart",
    "gantt chart",
    "react-gantt",
    "task"
  ],
  "scripts": {
    "dev": "vite --config vite.config.demo.ts",
    "build": "tsc -p ./tsconfig-build.json && vite build",
    "build:demo": "vite build --config vite.config.demo.ts",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/eslint-plugin": "1.3.26",
    "eslint": "^9.38.0",
    "eslint-plugin-jest-dom": "5.5.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-testing-library": "7.13.3",
    "globals": "^15.8.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/nikmaxott/gantt-chart/issues"
  },
  "homepage": "https://github.com/nikmaxott/gantt-chart#readme",
  "directories": {
    "example": "example"
  }
}
